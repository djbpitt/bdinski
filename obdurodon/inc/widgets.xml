  <span id="magnifierToggleWrapper">
    <input id="toggleMagnifier" type="checkbox" onclick="toggleMagnifier();"/>
    <label for="toggleMagnifier">Toggle magnifier</label>
  </span>
    <!--#include virtual="choose-page.xml" -->
</div>
